<div class="form-signin">
<h2 class="form-signin-heading">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "confirm password"   %>
  </div>
  <div class="field">
    <%= f.time_zone_select :time_zone, nil, {default: "Pacific Time (US & Canada)"}, {:class =>"btn btn-default dropdown-toggle"}  %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>